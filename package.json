{
  "private": true,
  "name": "counter",
  "main": "src/App.tsx",
  "version": "1.0.1",
  "scripts": {
    "start": "expo start",
    "test": "node ./node_modules/jest-expo/bin/jest.js",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lc": "git ls-files | egrep \".*\\.(tsx?)\" | egrep -v \"data/lib\" | xargs wc -l | sort"
  },
  "dependencies": {
    "@expo/vector-icons": "^12.0.0",
    "@react-native-async-storage/async-storage": "^1.13.0",
    "@types/shortid": "^0.0.29",
    "expo": "^41.0.0",
    "expo-splash-screen": "~0.10.2",
    "expo-status-bar": "~1.0.4",
    "expo-updates": "~0.5.4",
    "memoize-one": "^5.2.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-native": "0.63.4",
    "react-native-appearance": "~0.3.3",
    "react-native-haptic-feedback": "^1.10.0",
    "react-native-modal": "^11.10.0",
    "react-native-reanimated": "~2.1.0",
    "react-native-safe-area-context": "3.2.0",
    "react-native-screens": "~3.0.0",
    "react-native-size-matters": "^0.4.0",
    "react-native-unimodules": "~0.13.3",
    "react-native-web": "~0.13.12",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "@babel/core": "~7.9.0",
    "@types/jest": "^26.0.14",
    "@types/react": "~16.9.35",
    "@types/react-dom": "~16.9.8",
    "@types/react-native": "~0.63.2",
    "@types/react-redux": "^7.1.9",
    "@types/redux-persist": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-jest": "~25.2.6",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "codecov": "^3.7.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest": "~25.2.6",
    "jest-expo": "^41.0.0",
    "jest-junit": "^11.1.0",
    "prettier": "^2.1.2",
    "react-test-renderer": "~16.13.1",
    "ts-jest": "~25.2.1",
    "typescript": "~4.2.4"
  },
  "jest-junit": {
    "outputDirectory": "./reports/jest"
  },
  "jest": {
    "preset": "jest-expo",
    "collectCoverage": true,
    "testRegex": "(/__tests__/(?!.*testdata).*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "collectCoverageFrom": [
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "!**/*.testdata.js",
      "!**/@types/**",
      "!**/utils/TestHelper.js",
      "!**/node_modules/**",
      "!**/lib/*.js",
      "!**/coverage/**",
      "!**/jest-setup.js",
      "!**/babel.config.js"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFiles": [
      "react-native/jest/setup.js",
      "jest-expo/src/preset/setup.js",
      "./jest/jestSetup.js"
    ],
    "moduleNameMapper": {
      "^Components(.*)$": "<rootDir>/src/components$1",
      "^Redux(.*)$": "<rootDir>/src/redux$1",
      "^Screens(.*)$": "<rootDir>/src/screens$1",
      "^Statics(.*)$": "<rootDir>/src/statics$1",
      "^Resources(.*)$": "<rootDir>/resources$1"
    }
  }
}
